<div class="container ml-4">
  <div class="show1 p-4">
  <%= link_to "Home", root_path, class: "btn btn-sm btn-primary  mb-4" %>
  <%= link_to 'Back', projects_path, class: "btn btn-sm btn-primary ml-2 mb-4" %>
  <h3><strong>Project:</strong>
    <span><%= @project.name %></span>
    <span class="float-right">
      <%= link_to "Edit", edit_project_path(@project), class: "btn btn-sm btn-dark ml-4" %>
      <%= link_to "Done", @project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger ml-2" %>
    </span>
  </h3>
  <h5>
  <strong class="ml-2 ">Description:</strong>
  <%= @project.description %>

  <strong class="ml-4">User Id:</strong>
  <%= @project.user_id %>
  </h5>


  <div class="container-title bg-info text-white mt-4 p-2">
    <h5><strong>Tasks List:</strong></h5>
    <div class="row ml-1">
      <% @project.tasks.each do |task| %>

      <div class="col-sm-1">
        <span class="badge badge-<%= task.badge_color %> mb-3">
          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-file-check" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M4 0h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H4z"/>
            <path fill-rule="evenodd" d="M10.854 6.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 8.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
          </svg>
           </span>
        </div>
        <div class="col-sm-4 ">
            <%= link_to task.name, project_task_path(@project, task), class: 'text-decoraton-none text-white font-weight-bold' %>
        </div>

        <div class="col-sm-7 mb-2">
          <%= task.description %>
        </div>
      <% end %>
    </div>
  </div>

              <!-- Edit Tasks List START -->

  <h4 class="m-4 text-center">Edit <%= @project.name %> Tasks </h4>
  <%= render @project.tasks %>

            <!-- Edit Tasks List END -->

  <h5 class="text-center m-4">Add a New <%= @project.name %> Task</h5>
  <%= render 'tasks/form1', task: @project.tasks.build %>
</div>
</div>
