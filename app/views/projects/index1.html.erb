<div class="container bg-secondary text-white font-weight-bold m-4">
  <p id="notice"><%= notice %></p>


  <h2 class="card-title d-flex justify-content-between p-2">
    <span>Projects</span>
    <%= link_to 'New Project', new_project_path, class: "btn btn-sm btn-primary mb-4" %>
  </h2>
  <table>
    <thead class="text-warning">
      <tr>
        <th>Name</th>
        <th>%</th>
        <th>Description</th>
        <th>ID</th>
        <th colspan="3"></th>
      </tr>

    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td class="p-2"><%= project.name %></td>
          <td class="p-2 badge badge-<%= project.badge_color %> " >
            <%= project.percent_complete %>
          </td>
          <td class="p-2"><%= project.description %></td>
          <td class="p-2"><%= project.user_id %></td>
          <td><%= link_to 'Show', project, class: "btn btn-sm btn-primary" %></td>

        </tr>

      <% end %>
    </tbody>
  </table>

  <br>


</div>
